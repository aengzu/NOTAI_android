<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.iguana.notetaking.ai.AiViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 박스를 만들기 위한 뷰 (상단 고정) -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/boxView"
            android:layout_width="180dp"
            android:layout_height="36dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/page_box_background"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"> <!-- 상단 마진 추가 -->
            <!-- 박스 안에 텍스트를 표시하는 TextView -->
            <TextView
                android:id="@+id/aiPageTextView"
                style="@style/Regular6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@{String.valueOf(viewModel.pageNumber) + ` 페이지`}"
                android:textColor="@color/grey_20"
                app:layout_constraintBottom_toBottomOf="@id/boxView"
                app:layout_constraintEnd_toEndOf="@id/boxView"
                app:layout_constraintStart_toStartOf="@id/boxView"
                app:layout_constraintTop_toTopOf="@id/boxView" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/aiStatusTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ai_empty_message"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/boxView" />

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            app:layout_constraintBottom_toTopOf="@id/aiButton"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/aiStatusTextView">


            <!-- 요약 및 문제 결과 레이아웃 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 요약 타이틀 -->
                <TextView
                    android:id="@+id/summaryTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="요약"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- 요약 텍스트뷰 -->
                <TextView
                    android:id="@+id/aiContentTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:text="AI 요약"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />

                <!-- 구분선 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="16dp"
                    android:background="@color/grey_50" />

                <!-- 연습문제 타이틀 -->
                <TextView
                    android:id="@+id/problemTitleTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="연습문제"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <!-- 문제 결과 텍스트뷰 -->
                <TextView
                    android:id="@+id/aiProblemTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:lineSpacingExtra="6dp"
                    android:text="문제 결과"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:visibility="gone" />
            </LinearLayout>

        </ScrollView>

        <LinearLayout
            android:id="@+id/aiButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/button4_background"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingHorizontal="12dp"
            android:paddingVertical="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <!-- 아이콘 (좌측) -->
            <ImageView
                android:id="@+id/buttonIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/ic_ai_active" />

            <!-- 텍스트 (AI 요약하기) -->
            <TextView
                android:id="@+id/buttonText"
                style="@style/Regular9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="AI 요약하기" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
